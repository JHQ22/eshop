@model SnacksShop.Models.Users
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

    <div class="main-content">
        <h2>@ViewBag.Title </h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <fieldset class="form-horizontal">
                <legend>My Profile</legend>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.Pwd)
                @Html.HiddenFor(model => model.AddressID)

                <div class="form-group">
                    <label class="control-label col-md-2">Username：</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Email：</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Nickname：</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Nick, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nick, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value=" Save " class="btn" />
                    </div>
                </div>
            </fieldset>
        }

    </div>